{
  "expo": {
    "name": "Stamp Identifier",
    "slug": "stamp-identifier",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stamp.identifier.snap"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.magicdev.stampsnap"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  },
  "plugins": [
    [
      "expo-tracking-transparency",
      {
        "userTrackingPermission": "This identifier will be used to deliver personalized ads to you."
      }
    ],
    [
      "expo-camera",
      {
        "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to identify stamp from camera",
        "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
        "recordAudioAndroid": true
      }
    ],
    [
      "react-native-iap",
      {
        "paymentProvider": "both"
      }
    ],
    [
      "expo-asset",
      {
        "assets": [
          "assets"
        ]
      }
    ]
  ],
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-9597010572153445~9185639509",
    "ios_app_id": "ca-app-pub-1354543839348242~3273848178"
  }
}
